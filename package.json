{
  "name": "theradiochild",
  "version": "1.0.0",
  "description": "A bit of my albums selection from Spotify",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "cd client && npm run test:push",
    "lint:hook": "npm run lint && \"cd client && npm run lint\"",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Giannah/imatvchild.git"
  },
  "author": "Giannah",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Giannah/imatvchild/issues"
  },
  "homepage": "https://github.com/Giannah/imatvchild#readme",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "env": {
      "development": {}
    },
    "plugins": [
      [
        "@babel/plugin-transform-modules-commonjs",
        {
          "allowTopLevelThis": true
        }
      ]
    ]
  },
  "dependencies": {
    "btoa": "^1.2.1",
    "camelcase-keys": "^6.2.1",
    "express": "^4.17.1",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.2",
    "urijs": "^1.19.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "commitizen": "^4.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "cz-config.js"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint:hook && lint-staged",
      "pre-push": "npm run lint:hook && npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "pretty-quick -staged"
    ]
  }
}
